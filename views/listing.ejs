<!DOCTYPE html>
<html>

<head>
  <%- include('partials/head'); %>
</head>

<body>
  <div class="container">

    <%- include('partials/navbar'); %>

    <h1>
      <%= title %>
    </h1>
    <p>Welcome to <%= title %>
    </p>
    <% if (data.title && data.desc_) { %>
      <h2><%= data.title %></h2>
      <p><%- data.desc_ %></p>
      <img src="<%- data.img %>" width="500" height="600"> 
      <div id="map" ></div>
      <% if (data.pass) { %>
        <p>Your listing has been added. Wait for admin approval. Only with this password <code><%- data.pass %></code> you could deactivate this listing. Please keep it safe.</p>
      <% } %>

      <div class="card">
        <h2>deactivate</h2>
        <form action="deactivate" method="POST">
          <div>
            <label for="password">You need the password for the announcement</label>
            <input name="password" id="password" value="password...">
          </div>
          <br>
          <div>
            <button>Deactivate</button>
          </div>
        </form>
      </div>
    <% } else {    %>
    <% } %>

  <%- include('partials/prepare_toast'); %>

  </div>

  <%- include('partials/footer'); %>
</body>
<%- include('partials/afterbody'); %>
</html>